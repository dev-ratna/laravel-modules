{
  "name": "PerkDotCom/laravel-modules",
  "description": "Module creator for Laravel",
  "keywords": [
    "modules",
    "laravel",
    "perk"
  ],
  "homepage": "https://github.com/PerkDotCom/laravel-modules",
  "license": "MIT",
  "authors": [
    {
      "name": "Perk.com",
      "homepage": "https://github.com/PerkDotCom/laravel-modules/graphs/contributors"
    }
  ],
  "require": {
    "php": ">=5.5.9"
  },
  "autoload": {
    "psr-4": {
      "PerkDotCom\\Modules\\": "src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "4.*",
    "phpspec/phpspec": "~2.0",
    "illuminate/filesystem": "^5.1"
  },
  "autoload-dev": {
    "psr-4": {
      "PerkDotCom\\Modules\\Tests\\": "tests/"
    }
  },
  "require": {
    "illuminate/support": "^5.1",
    "illuminate/console": "^5.1",
    "mustache/mustache": "^2.8"
  },
  "scripts": {
    "test": "phpspec"
  }
}
